<html>
<body>

    @using (Html.BeginForm("ResetCode", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.Label(QRefResources.Resource.Login_ResetCode, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("resetCode", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(QRefResources.Resource.Login_NewPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("newPassword", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(QRefResources.Resource.Login_ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("confirmPassword", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
    }
</body>
</html>
